load("@rules_jvm_external//:defs.bzl", "artifact")
load("//bazel:module.bzl", "noel_module")

noel_module(
    name = "server",
    resources = glob(["resources/**"]),
    strip_prefix = "modules/http/server",
    srcs = glob(["src/**/*.java"]),
    deps = [
        "//modules/settings",

        artifact("io.netty:netty-transport-native-unix-common"),
        artifact("tools.jackson.core:jackson-databind"),
        artifact("io.netty:netty-codec-http"),
        artifact("org.jetbrains:annotations"),
        artifact("io.netty:netty-transport"),
        artifact("com.google.inject:guice"),
        artifact("io.netty:netty-buffer"),
        artifact("io.netty:netty-common"),
        artifact("org.slf4j:slf4j-api")
    ]
)
