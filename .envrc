if ! has nix_direnv_version || ! nix_direnv_version 3.0.6; then
    source_url "https://raw.githubusercontent.com/nix-community/nix-direnv/3.0.6/direnvrc" "sha256-RYcUJaRMf8oF5LznDrlCXbkOQrywm0HDv1VjYGaJGdM="
fi

# make .direnv if it doesn't exist
mkdir -p "$(direnv_layout_dir)"

watch_file flake.lock
watch_file nix/devshell.nix

# Include `NOEL_CONFIG_PATH` that points to `$pwd/config.yaml` since
# Bazel will use runfiles and we don't need runfiles for a configuration
# file.
export NOEL_CONFIG_PATH="$(pwd)/config.yaml"

use flake
eval "$shellHook"
